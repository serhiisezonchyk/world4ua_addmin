@model IEnumerable<world4admin.ua.Models.empClass>
@{
    ViewBag.Title = "Main";
}


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fugitive_status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.general_info)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.entry_doc)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.reg_doc)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.transport)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.housing)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.nutrition)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.pets)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.charity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.add_info)
        </th>
        <th></th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.fugitive_status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.general_info)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.entry_doc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.reg_doc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.transport)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.housing)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nutrition)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.pets)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.charity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.add_info)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.gid })
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.gid })
            </td>
        </tr>
    }

</table>
<style>

    table {
        font-family: "Lucida Sans Unicode", "Lucida Grande", Sans-Serif;
        font-size: 14px;
        background: white;
        max-width: 70%;
        width: 70%;
        border-collapse: collapse;
        text-align: left;
    }

    th {
        font-weight: normal;
        color: #039;
        border-bottom: 2px solid #6678b1;
        padding: 10px 8px;
    }

    td {
        border-bottom: 1px solid #ccc;
        color: #669;
        padding: 9px 8px;
        transition: .3s linear;
    }

    tr:hover td {
        color: #6699ff;
    }
</style>